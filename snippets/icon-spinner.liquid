<svg
  class="icon-spinner"
  width="20"
  height="20"
  viewBox="0 0 50 50"
  xmlns="http://www.w3.org/2000/svg"
>
  <circle
    cx="25"
    cy="25"
    r="20"
    fill="none"
    stroke="#000"
    stroke-width="5"
    stroke-linecap="round"
    stroke-dasharray="90,150"
    stroke-dashoffset="0"
  >
    <animateTransform
      attributeName="transform"
      type="rotate"
      from="0 25 25"
      to="360 25 25"
      dur="1s"
      repeatCount="indefinite"
    />
  </circle>
</svg>
